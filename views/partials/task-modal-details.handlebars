<div
  class="modal fade"
  id="exampleModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
>
  <div
    class="modal-dialog modal-xl modal-dialog-scrollable"
    style="height: 100hv;"
  >
    <div class="modal-content">
      <div class="modal-header">
        <!-- Task ID -->
        <h5 class="modal-title fs-5" id="modalIDLabel">Task ID: id</h5>

        <button
          class="close"
          type="button"
          data-bs-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <div class="modal-body">
        <!-- Task Title -->
        <!-- <div class="text-lg font-weight-bold text-primary text-uppercase mb-3" style="display:block;">
                            Task Name Task Name Task Name Task Name Task Name Task Name Task Name
                        </div> -->
        <input
          class="fs-4 form-control text-primary px-0"
          id="modalNameInput"
          type="text"
          style="border: none;"
          value="task name"
          aria-label="default input example"
        />

        <div class="row">
          <!-- Task Priority -->
          {{! <div class="col-2 d-flex flex-column mb-3">
            <label for="members" class="form-label">Priority</label>
            <i class="fas fa-rocket" style="color: #ff0000;"></i>

          </div> }}

          <!-- Task Status -->
          <div class="col-2 d-flex flex-column mb-3">
            <label for="members" class="form-label">Task Status</label>
            <div class="btn-group" id="statusBtnDropDown" >
              <button type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                Open Task
              </button>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" data-status-id=1>Open Task</a></li>
                <li><a class="dropdown-item" data-status-id=2>In Progress</a></li>
                <li><a class="dropdown-item" data-status-id=3>Completed</a></li>
              </ul>
            </div>
            <!-- <div class="card bg-success text-white shadow">
                                    <div class="card-body">
                                        Primary
                                    </div>
                                </div> -->
          </div>
        </div>

        <div class="d-flex flex-row">
          <!-- Task Members -->
          <div class="d-flex flex-column mr-4">
            <label for="members" class="form-label">Members</label>

            <div id="members" class="d-flex flex-row">
              <div class="modalAvatarIcons justify-content-end">
              </div>
              <div class="dropdown">

                <botton
                  class="text-lg btn btn-circle btn-secondary mx-2 "
                  type="button"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                  style="height: 30px; width: 30px;"
                  id="dropdownAddEmployeeBtn"
                >
                +
                </button>
                <ul class="dropdown-menu" id ="modalDropdownMenu">
                  <li>
                    <div class="dropdown-item" href="#">
                      <img
                        height="30px"
                        width="30px"
                        class="mr-2 img-profile rounded-circle d-inline"
                        src="https://avatars.dicebear.com/v2/avataaars/9c81cf6eac2c91263caab33d2bc4ec38.svg"
                      />
                      <div class="d-inline ml-2">Name</div>
                    </div>
                  </li>
                </ul>
              </div>
            </div>
          </div>
          <!-- Task Deadline -->
          <div class="d-flex flex-column">
            <label class="form-label">Deadline</label>

            <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
            <script
              src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"
            ></script>
            <script>
              $( function() { $( "#modalDeadlineText" ).datepicker(); } );
            </script>
            <input
              id="modalDeadlineText"
              class="text-success"
              type="text"
              style="line-height: 30px; border:none"
              value="15/December/2023"
            />

          </div>
        </div>

        <!-- Task Description -->
        <div class="mb-3 my-3">
          <label
            for="exampleFormControlTextarea1"
            class="form-label"
          >Description</label>
          <textarea
            class="form-control"
            id="modelDescriptionText"
            rows="3"
            style="height: 40%;"
          ></textarea>
        </div>

        <!-- Additional space filler, to be completed -->
        <div class="card-body border border-2 my-3">
          <p class="fw-bold">Activity</p>
          <div class="text-center">
            <img
              class="img-fluid px-3 px-sm-4 mt-3 mb-4"
              style="width: 25rem;"
              src="img/undraw_posting_photo.svg"
              alt="..."
            />
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-danger"
          data-bs-dismiss="modal"
        >Delete</button>
        {{! <button
          type="button"
          class="btn btn-secondary"
          data-bs-dismiss="modal"
        >Close</button> }}
        <button
          type="button"
          class="btn btn-primary"
          data-bs-dismiss="modal"
        >Save changes</button>
      </div>
    </div>
  </div>
</div>